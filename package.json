{
  "name": "bomix",
  "version": "0.2.0",
  "description": "BOM 變化管理與追蹤工具 - 電子 BOM 版本管理系統",
  "main": "./dist/.intermediate/main/index.js",
  "author": "BOMIX Team",
  "license": "MIT",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "build:win": "npm run build && electron-builder --win --config",
    "build:unpack": "npm run build && electron-builder --win --dir --config",
    "lint": "eslint . --ext .js,.jsx",
    "lint:fix": "eslint . --ext .js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,css,json}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@tanstack/react-table": "^8.21.3",
    "better-sqlite3": "^11.10.0",
    "lucide-react": "^0.564.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^10.1.0",
    "xlsx": "^0.18.5",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^34.2.0",
    "electron-builder": "^25.0.0",
    "electron-vite": "^3.0.0",
    "eslint": "^9.18.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "globals": "^15.14.0",
    "node-gyp": "^12.2.0",
    "prettier": "^3.4.2",
    "tailwindcss": "^4.0.0",
    "vite": "^6.0.0",
    "vitest": "^3.0.0"
  },
  "build": {
    "appId": "com.bomix.app",
    "productName": "BOMIX",
    "directories": {
      "buildResources": "resources",
      "output": "dist"
    },
    "files": [
      "dist/.intermediate/**/*"
    ],
    "asarUnpack": [
      "**/*.node"
    ],
    "extraResources": [
      {
        "from": "CHANGELOG.md",
        "to": "CHANGELOG.md"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  }
}
